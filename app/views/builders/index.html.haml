%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bootstrap Example
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
  %body
    %nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      / Brand
      / %a.navbar-brand{:href => "dashboards_path"} StandUp
      #{link_to "StandUp", dashboards_path,class: "navbar-brand"}
      / Links
      %ul.navbar-nav
        %li.nav-item
          / %a.nav-link{:href => "#"} Home
          #{link_to "Home", schedules_path,class: "nav-link"}
        %li.nav-item
          #{link_to "Workflows", schedules_path,class: "nav-link"}
          / %a.nav-link{:href => "#"} Workflows
        %li.nav-item
          #{link_to "Teams", teams_path,class: "nav-link"}
        / Dropdown

    %br/
    %h4.pl-3 Workflow Builder
    %hr/
    .container
      .row
        %aside.col-sm-3
          .card
            %article.card-group-item
              %header.card-header
                %h6.title Steps
              .filter-content
                .list-group.list-group-flush
                %span
                  #{link_to "Setup", dashboards_path,class: "list-group-item"}
                  / %a.list-group-item{"data-toggle" => "pill", :href => "dashboards_path"}
                  /   Setup
                  /   %span.float-right.badge.badge-light.round
                %span
                  #{link_to "Schedule", schedules_path,class: "list-group-item"}
                  / %a.list-group-item.text-dark{"data-toggle" => "pill", :href => "schedules_path"}
                  /   Schedule
                  /   %span.float-right.badge.badge-light.round
                %span
                  #{link_to "Builder", builders_path,class: "list-group-item active"}
                  / %a.list-group-item.text-dark{"data-toggle" => "pill", :href => "#menu3"}
                  /   Builder
                  /   %span.float-right.badge.badge-light.round
                %span
                  #{link_to "Pariticipants", participants_path,class: "list-group-item"}
                  / %a.list-group-item.text-dark{"data-toggle" => "pill", :href => "#menu4"}
                  /   Pariticipants
                  /   %span.float-right.badge.badge-light.round
                %span
                  #{link_to "Notifications", schedules_path,class: "list-group-item"}
                  / %a.list-group-item.text-dark{"data-toggle" => "pill", :href => "#menu5"}
                  /   Notifications
                  /   %span.float-right.badge.badge-light.round
                %span
                  #{link_to "Review", schedules_path,class: "list-group-item"}
                  / %a.list-group-item.text-dark{"data-toggle" => "pill", :href => "#menu6"}
                  /   Review
                  /   %span.float-right.badge.badge-light.round
                / list-group .//
            / card-group-item.//
          / card.//
        / col.//
        .col-sm-9
          =form_for(:builder, html: { class: "form-horizontal", role: "form" }) do |f|
            %aside.col-sm-12
              .card
                %article.card-group-item
                  %header.card-header
                    %h6.title Question #1
                  .filter-content
                    .card-body
                      %p What did you accomplish yesterday?
                      .form-row
                        .form-group.col-md-12
                          =f.text_field :answer1, class: "form-control", placeholder: ""
                    / card-body.//
                / card-group-item.//
              / card.//
            / col.//
            %aside.col-sm-12
              .card
                %article.card-group-item
                  %header.card-header
                    %h6.title Question #2
                  .filter-content
                    .card-body
                      %p What do you plan to complete today?
                      .form-row
                        .form-group.col-md-12
                          =f.text_field :answer2, class: "form-control", placeholder: ""
                    / card-body.//
                / card-group-item.//
              / card.//
            / col.//
            %aside.col-sm-12
              .card
                %article.card-group-item
                  %header.card-header
                    %h6.title Question #3
                  .filter-content
                    .card-body
                      %p Do you have any blockers?
                      .form-row
                        .form-group.col-md-12
                          =f.text_field :answer3, class: "form-control", placeholder: ""
                    / card-body.//
                / card-group-item.//
              / card.//
            / col.//

            %aside.col-sm-12
              .card
                %article.card-group-item
                  %header.card-header
                    %h6.title Kudos
                  .filter-content
                    .card-body
                      %p Power-ups
                      .form-row
                        .form-group.col-md-12
                        %label
                          =f.hidden_field :kudos, class: "form-control", id: "kudos_val"
                          %i.fa.fa-thumbs-up.fa-5x#kudos
                    / card-body.//
                / card-group-item.//
              / card.//
            / col.//
            %aside.col-sm-12
              .card
                %article.card-group-item
                  %header.card-header
                    %h6.title Suggestions
                  .filter-content
                    .card-body
                      .form-row
                        .form-group.col-md-12
                          =f.text_area :suggestions, class: "form-control", placeholder: ""
                    / card-body.//
                / card-group-item.//
              / card.//
            / col.//

            %br/
            %aside.col-sm-12
              .card
                %button.btn.btn-primary Next
              / card.//
            / col.//
      / row.//
    / container.//
    :javascript
      $(document).ready(function() {
        $("#kudos_val").val("true");
        $("#kudos").click(function(){
        this.classList.toggle("fa-thumbs-down");
        var hiddenField = $('#kudos_val'),
        val = hiddenField.val();
        hiddenField.val(val === "true" ? "false" : "true");

        });

      });
